rules_version = '2';

// Firebase Storage Rules for Talkifyy - Permissive for Testing
service firebase.storage {
  match /b/{bucket}/o {
    // Allow all authenticated users to read and write to profile-related paths
    match /profile_pictures/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    match /profile_pic/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    match /images/profiles/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // For testing - allow any authenticated user to upload to images folder
    match /images/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Default rule - allow authenticated users for now
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
