rules_version = '2';

// Firebase Storage Rules for Talkifyy - Ultra Permissive for Bucket Initialization
service firebase.storage {
  match /b/{bucket}/o {
    // Ultra permissive rules - allow read/write/list for authenticated users everywhere
    match /{allPaths=**} {
      allow read, write, list: if request.auth != null;
    }
  }
}
