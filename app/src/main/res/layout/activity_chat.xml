<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity"
    android:background="@color/off_white">

    <!-- Fixed Toolbar that won't move when keyboard appears -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/my_primary"
        android:padding="8dp"
        android:elevation="4dp"
        android:id="@+id/toolbar">

        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:id="@+id/back_btn"/>

        <include layout="@layout/profile_pic_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@id/back_btn"
            android:layout_centerVertical="true"
            android:id="@+id/profile_pic_layout"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/profile_pic_layout"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/other_username"/>

    </RelativeLayout>

    <!-- Selection Action Bar (hidden by default) -->
    <RelativeLayout
        android:id="@+id/selection_action_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/toolbar"
        android:background="@color/my_primary"
        android:padding="8dp"
        android:elevation="4dp"
        android:visibility="gone">
        
        <TextView
            android:id="@+id/selection_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:text="0 selected"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/select_all_btn"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:text="ALL"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />
            
            <TextView
                android:id="@+id/delete_selected_btn"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:text="ðŸ—‘ï¸"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />
            
            <TextView
                android:id="@+id/cancel_selection_btn"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:text="âŒ"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
        
    </RelativeLayout>

    <!-- Messages area that will resize when keyboard appears -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/bottom_layout"
        android:paddingTop="8dp"
        android:clipToPadding="false"
        android:id="@+id/chat_recycler_view"/>

    <!-- Fixed input area at bottom -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:minHeight="60dp"
        android:padding="8dp"
        android:background="@color/white"
        android:elevation="8dp"
        android:id="@+id/bottom_layout">


        <!-- Attachment Button -->
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/person_icon"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circular_bg"
            android:backgroundTint="@color/my_secondary"
            app:tint="@color/white"
            android:id="@+id/attachment_btn"
            android:padding="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:elevation="2dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/attachment_btn"
            android:layout_toLeftOf="@id/message_send_btn"
            android:background="@drawable/edit_text_rounded_corner"
            android:hint="Write message"
            android:padding="12dp"
            android:minHeight="44dp"
            android:maxLines="4"
            android:scrollbars="vertical"
            android:inputType="textCapSentences|textMultiLine"
            android:imeOptions="actionSend"
            android:id="@+id/chat_message_input"/>

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_send"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circular_bg"
            android:backgroundTint="@color/my_primary"
            app:tint="@color/white"
            android:id="@+id/message_send_btn"
            android:padding="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:elevation="2dp" />

    </RelativeLayout>


</RelativeLayout>
