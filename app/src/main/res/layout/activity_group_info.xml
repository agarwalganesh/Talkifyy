<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    tools:context=".GroupInfoActivity">

    <!-- Toolbar -->
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/my_primary"
        android:padding="8dp"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:background="@drawable/icon_back"
            android:backgroundTint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/back_btn"
            android:text="Group Info"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/menu_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/person_icon"
            android:padding="6dp"
            app:tint="@color/white" />

    </RelativeLayout>

    <!-- ScrollView for content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/bottom_actions">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Group Header Section -->
            <LinearLayout
                android:id="@+id/group_header_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@color/white"
                android:layout_margin="8dp"
                android:elevation="2dp">

                <!-- Group Profile Picture -->
                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/group_profile_pic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edit_text_rounded_corner"
                        android:backgroundTint="@color/light_gray"
                        android:src="@drawable/person_icon"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/edit_photo_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/circular_bg"
                        android:backgroundTint="@color/my_primary"
                        android:src="@drawable/icon_search"
                        android:padding="6dp"
                        android:layout_margin="4dp"
                        android:visibility="gone" />

                </FrameLayout>

                <!-- Group Name Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/group_name_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Group Name"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:textAlignment="center"
                        android:maxLength="50" />

                    <ImageButton
                        android:id="@+id/edit_group_name_btn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circular_bg"
                        android:backgroundTint="@color/my_secondary"
                        android:src="@drawable/icon_search"
                        android:padding="8dp"
                        android:visibility="gone" />

                    <ImageButton
                        android:id="@+id/save_group_name_btn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circular_bg"
                        android:backgroundTint="@color/green"
                        android:src="@drawable/icon_send"
                        android:padding="8dp"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Group Description -->
                <EditText
                    android:id="@+id/group_description_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Group description..."
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:background="@android:color/transparent"
                    android:enabled="false"
                    android:textAlignment="center"
                    android:maxLength="200"
                    android:layout_marginBottom="8dp" />

                <!-- Created by info -->
                <TextView
                    android:id="@+id/group_created_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Created by Admin â€¢ Today"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- Group Actions Section -->
            <LinearLayout
                android:id="@+id/group_actions_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp">

                <!-- Media Section -->
                <LinearLayout
                    android:id="@+id/media_section"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/person_icon"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/my_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Media, links, and docs"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:textSize="16sp"
                        android:textColor="@color/gray" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color"
                    android:layout_marginStart="56dp" />

                <!-- Starred Messages -->
                <LinearLayout
                    android:id="@+id/starred_messages_section"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/person_icon"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/my_secondary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Starred messages"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:textSize="16sp"
                        android:textColor="@color/gray" />

                </LinearLayout>

            </LinearLayout>

            <!-- Members Section -->
            <LinearLayout
                android:id="@+id/members_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp">

                <!-- Members Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/members_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Members (0)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <ImageButton
                        android:id="@+id/add_member_btn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circular_bg"
                        android:backgroundTint="@color/my_primary"
                        android:src="@drawable/person_icon"
                        android:padding="8dp"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Members RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/members_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    tools:listitem="@layout/group_member_item" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Action Buttons -->
    <LinearLayout
        android:id="@+id/bottom_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="4dp">

        <Button
            android:id="@+id/leave_group_btn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_rounded_corner"
            android:backgroundTint="@color/red"
            android:text="Leave Group"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/delete_group_btn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/edit_text_rounded_corner"
            android:backgroundTint="@color/red_700"
            android:text="Delete Group"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>