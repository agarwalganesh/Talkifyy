<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/reaction_picker_background"
    android:padding="12dp"
    android:elevation="8dp">

    <TextView
        android:id="@+id/emoji_thumbs_up"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="👍"
        android:textSize="24sp"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/emoji_heart"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="❤️"
        android:textSize="24sp"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/emoji_laugh"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="😂"
        android:textSize="24sp"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/emoji_wow"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="😮"
        android:textSize="24sp"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/emoji_sad"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="😢"
        android:textSize="24sp"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/emoji_angry"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="😡"
        android:textSize="24sp"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>